pipeline {
    agent any

    environment {

        FOO = "BAR"

    }

    triggers {
        cron('H/2 * * * *')
    }

    stages {

        stage('Example shell script') {
            steps {

                script {
                    def result = 'YES'
                }

                sh 'echo "WOO"'
                echo "The result is " + result
                echo "The result also is ${result}"
                sh "echo ${result}"
                sh "echo ${FOO}"
            }
        }
    }

}
